# Configuração do Servidor
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/zen-personal-trainer
# Para MongoDB Atlas (nuvem):
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/zen-personal-trainer

# JWT Secret (gere uma chave segura aleatória)
JWT_SECRET=sua_chave_secreta_super_segura_aqui_mude_isso

# JWT Expiration
JWT_EXPIRE=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# Email Configuration
# Para desenvolvimento, deixe vazio para usar Ethereal (email fake)
# Para produção, configure com seu provedor de email
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM="Zen Personal Trainer <noreply@zen.com>"

# Frontend URL (para links nos emails)
FRONTEND_URL=http://localhost:3000

# Wellhub Integration
WELLHUB_API_KEY=sua_api_key_do_wellhub
WELLHUB_TEST_AUTH_URL=https://test-api-url/auth
WELLHUB_TEST_REGISTRATION_URL=https://test-api-url/register
WELLHUB_PRODUCTION_AUTH_URL=https://production-api-url/auth
WELLHUB_PRODUCTION_REGISTRATION_URL=https://production-api-url/register
WELLHUB_REDIRECT_URL=http://localhost:3000
DEFAULT_TRAINER_ID=seu_trainer_id_aqui
